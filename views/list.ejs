<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%= vday%> 
       </h1>

    </div>
    
    <div class="box">
        <form action="/delete" method="post">
            <%vitem.forEach(i=>{%>
                <div class="item">
                    <input name="checkbox" onChange="this.form.submit()" value="<%= i._id%>" type="checkbox" >
                    <p><%= i.name %></p> 
                </div>
            <%})%>
            <input type="hidden" name="customdelete" value="<%=bvalue%>">
        </form>
       



    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value="<%=bvalue%>" >+</button>

    </form>
    </div>

    <%- include('footer'); -%>
